<div class="card">
  <div class="card-body">
  投稿者：
  <%= link_to article.user.nickname,"/users/#{article.user_id}" %>
    <div class="card-content">
      <%= simple_format(article.text) %>
    </div>
    <div class="card-action">
      <%= link_to '詳細', "/articles/#{article.id}", method: :get ,class:"waves-effect waves-light btn pink lighten-3"%>
      <% if user_signed_in? && current_user.id == article.user_id %>
      <%= link_to '編集', "/articles/#{article.id}/edit", method: :get ,class:"waves-effect waves-light btn pink lighten-3"%>
      <%= link_to '削除', "/articles/#{article.id}", method: :delete ,class:"waves-effect waves-light btn pink lighten-3"%>
      <% end %>
    </div>
  </div>
</div>




