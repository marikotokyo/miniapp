<div class="contents row">
  <div class="nanka">
<div class="show-head">
<div class="show-hako">
<div class="card">
  投稿者：
  <%= link_to @article.user.nickname,"/users/#{@article.user_id}" %>
    <div class="card-content">
      <%= simple_format(@article.text) %>
    </div>
    <div class="card-action">
      <%= link_to '詳細', "/articles/#{@article.id}", method: :get ,class:"waves-effect waves-light btn pink lighten-3"%>
      <% if user_signed_in? && current_user.id == @article.user_id %>
      <%= link_to '編集', "/articles/#{@article.id}/edit", method: :get ,class:"waves-effect waves-light btn pink lighten-3"%>
      <%= link_to '削除', "/articles/#{@article.id}", method: :delete ,class:"waves-effect waves-light btn pink lighten-3"%>
      <% end %>
    </div>
</div>

<div class="container">
    <!-- ここからフォーム -->
    <% if current_user %>

      <%= form_for [@article,@comment] do |f| %>
        <%= f.text_field :text %>
        <%= f.submit "投稿する" %>
      <% end %>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
</div>
</div>

